#!/bin/sh -e

echo "---> Saving build-artifactsss"

echo '------------'
env
echo '------------'

echo $STI_HOME
echo ${STI_HOME}
pushd /opt/ruby

if [ -d ./bundle/ruby -a -f ./src/Gemfile.lock ]; then
  echo '111111111111111'
  tar zcf /tmp/artifacts/gems.tgz bundle/ruby src/Gemfile.lock
  echo '!!!!!!!!!!!!!!!'
  ls -la /tmp/artifacts
  echo '!!!!!!!!!!!!!!!'
fi

#echo 'force taring'
#tar zcf /tmp/artifacts/gems.tgz bundle/ruby src/Gemfile.lock

#echo '!!!!! TMP !!!!!!!'
#ls -la /tmp/

#echo '!!!!! TMP/artif !!!!!!!'
#ls -la /tmp/artifacts
#echo '!!!!!!!!///////////////'

popd >/dev/null
